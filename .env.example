###############################################################################
# AI Stack - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
###############################################################################

# --- Storage root (Unraid appdata path) ---
DATA_ROOT=/mnt/user/appdata/ai-stack

# --- PostgreSQL ---
POSTGRES_USER=aistack
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=aistack

# --- LiteLLM ---
# Generate with: openssl rand -hex 32
LITELLM_MASTER_KEY=sk-CHANGE_ME_LITELLM_MASTER_KEY

# --- API Keys ---
OPENAI_API_KEY=sk-...your-openai-key...
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key...

# --- Open WebUI ---
# Generate with: openssl rand -hex 32
WEBUI_SECRET_KEY=CHANGE_ME_WEBUI_SECRET_KEY
WEBUI_PORT=8089
WEBUI_NAME=Team AI

# --- Team Auth ---
# pending  = new signups require admin approval (recommended for teams)
# user     = new signups are immediately active
# admin    = new signups get admin rights (not recommended)
DEFAULT_USER_ROLE=pending
ENABLE_SIGNUP=true

# --- OAuth (leave commented until you're ready to configure) ---
