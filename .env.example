###############################################################################
# AI Stack - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
###############################################################################

# --- Storage root (Unraid appdata path) ---
DATA_ROOT=/mnt/user/appdata/ai-stack

# --- PostgreSQL ---
POSTGRES_USER=aistack                       # Database username
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD # Database password â€” use a strong random value
POSTGRES_DB=aistack                         # Default database name

# --- LiteLLM ---
# Generate with: openssl rand -hex 32
LITELLM_MASTER_KEY=sk-CHANGE_ME_LITELLM_MASTER_KEY  # Master API key for LiteLLM proxy
LITELLM_DB=litellm                                   # PostgreSQL database name for LiteLLM

# --- API Keys ---
# These are optional if you manage keys via the LiteLLM UI instead
OPENAI_API_KEY=sk-...your-openai-key...           # OpenAI API key
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key... # Anthropic API key

# --- Open WebUI ---
# Generate with: openssl rand -hex 32
WEBUI_SECRET_KEY=CHANGE_ME_WEBUI_SECRET_KEY # Secret key used to sign sessions
WEBUI_PORT=8089                             # Host port Open WebUI listens on
WEBUI_NAME=Team AI                          # Display name shown in the UI
OPENWEBUI_DB=openwebui                      # PostgreSQL database name for Open WebUI

# --- SearXNG ---
# Generate with: openssl rand -hex 32
SEARXNG_SECRET_KEY=CHANGE_ME_SEARXNG_SECRET_KEY # Secret key for SearXNG instance

# --- Redis ---
# No password set by default (internal network only)
# To add auth: append '--requirepass yourpassword' to the redis command in docker-compose.yml

# --- Team Auth ---
# pending  = new signups require admin approval (recommended for teams)
# user     = new signups are immediately active
# admin    = new signups get admin rights (not recommended)
DEFAULT_USER_ROLE=pending
ENABLE_SIGNUP=true  # Set to false to disable new registrations entirely

